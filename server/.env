# RadioHead Server Environment Configuration
# Copy this file to .env and customize the values

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CLIENT_URL=http://localhost:3000
# Additional allowed origins (comma separated)
ALLOWED_ORIGINS=https://localhost:3000,http://127.0.0.1:3000,https://127.0.0.1:3000

# Security (for production)
# JWT_SECRET=your-super-secret-jwt-key
# SESSION_SECRET=your-session-secret

# Monitoring & Logging (optional)
# LOG_LEVEL=info
# ENABLE_REQUEST_LOGGING=true

# Rate Limiting
# RATE_LIMIT_REQUESTS=200
# RATE_LIMIT_WINDOW_MS=60000

# Radio Browser API Configuration
# These are handled automatically by the service, but can be overridden
# RADIO_BROWSER_TIMEOUT=15000
# RADIO_BROWSER_MAX_RETRIES=3
# SERVER_CACHE_TTL=600000

# Development Settings
# ENABLE_DEBUG_LOGS=true
# MOCK_RADIO_API=false

# Production Settings (uncomment for production)
# NODE_ENV=production
# TRUST_PROXY=true
# HELMET_ENABLED=true