{
  "name": "radiohead-server",
  "version": "2.0.0",
  "description": "Professional Radio Browser API server with enhanced reliability and monitoring",
  "main": "index.js",
  "author": "Sahil",
  "license": "MIT",
  "keywords": [
    "radio",
    "streaming",
    "api",
    "radio-browser",
    "music",
    "server"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js routes/*.js services/*.js",
    "health": "curl -s http://localhost:5000/api/health | json_pp",
    "docs": "curl -s http://localhost:5000/api/docs | json_pp",
    "server-info": "curl -s http://localhost:5000/api/radio/server-info | json_pp"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "*.test.js",
      "coverage/"
    ],
    "delay": "1000"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/radiohead-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/radiohead-server/issues"
  },
  "homepage": "https://github.com/your-username/radiohead-server#readme"
}